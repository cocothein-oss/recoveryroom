{
  "version": "0.1.0",
  "name": "recovery_room",
  "instructions": [
    {
      "name": "initializeProtocol",
      "accounts": [
        { "name": "protocolState", "isMut": true, "isSigner": false },
        { "name": "authority", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "roundDuration", "type": "i64" },
        { "name": "minLossPercentage", "type": "u8" },
        { "name": "maxTokensPerUser", "type": "u8" }
      ]
    },
    {
      "name": "startRound",
      "accounts": [
        { "name": "protocolState", "isMut": true, "isSigner": false },
        { "name": "roundState", "isMut": true, "isSigner": false },
        { "name": "previousRound", "isMut": false, "isSigner": false, "isOptional": true },
        { "name": "payer", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": []
    },
    {
      "name": "participate",
      "accounts": [
        { "name": "protocolState", "isMut": false, "isSigner": false },
        { "name": "roundState", "isMut": true, "isSigner": false },
        { "name": "participation", "isMut": true, "isSigner": false },
        { "name": "tokenPoolEntries", "isMut": true, "isSigner": false },
        { "name": "user", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        {
          "name": "tokenEntries",
          "type": { "vec": { "defined": "TokenEntry" } }
        }
      ]
    },
    {
      "name": "requestRandomness",
      "accounts": [
        { "name": "protocolState", "isMut": true, "isSigner": false },
        { "name": "roundState", "isMut": true, "isSigner": false },
        { "name": "vrf", "isMut": true, "isSigner": false },
        { "name": "oracleQueue", "isMut": true, "isSigner": false },
        { "name": "queueAuthority", "isMut": false, "isSigner": false },
        { "name": "dataBuffer", "isMut": true, "isSigner": false },
        { "name": "permission", "isMut": false, "isSigner": false },
        { "name": "escrow", "isMut": true, "isSigner": false },
        { "name": "payerWallet", "isMut": true, "isSigner": false },
        { "name": "payer", "isMut": true, "isSigner": true },
        { "name": "recentBlockhashes", "isMut": false, "isSigner": false },
        { "name": "switchboardProgramState", "isMut": false, "isSigner": false },
        { "name": "switchboardProgram", "isMut": false, "isSigner": false },
        { "name": "tokenProgram", "isMut": false, "isSigner": false },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": []
    },
    {
      "name": "consumeRandomness",
      "accounts": [
        { "name": "protocolState", "isMut": true, "isSigner": false },
        { "name": "roundState", "isMut": true, "isSigner": false },
        { "name": "vrf", "isMut": false, "isSigner": false },
        { "name": "tokenPool", "isMut": true, "isSigner": false }
      ],
      "args": []
    }
  ],
  "accounts": [
    {
      "name": "ProtocolState",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "authority", "type": "publicKey" },
          { "name": "roundDuration", "type": "i64" },
          { "name": "minLossPercentage", "type": "u8" },
          { "name": "maxTokensPerUser", "type": "u8" },
          { "name": "currentRound", "type": "u64" },
          { "name": "totalRoundsCompleted", "type": "u64" },
          { "name": "bump", "type": "u8" }
        ]
      }
    },
    {
      "name": "RoundState",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "roundId", "type": "u64" },
          { "name": "startTime", "type": "i64" },
          { "name": "endTime", "type": "i64" },
          { "name": "totalParticipants", "type": "u32" },
          { "name": "totalTokenEntries", "type": "u32" },
          { "name": "status", "type": { "defined": "RoundStatus" } },
          { "name": "vrfResult", "type": { "option": { "array": ["u8", 32] } } },
          { "name": "winnerToken", "type": { "option": "publicKey" } },
          { "name": "bump", "type": "u8" }
        ]
      }
    },
    {
      "name": "Participation",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "user", "type": "publicKey" },
          { "name": "roundId", "type": "u64" },
          { "name": "tokens", "type": { "vec": { "defined": "TokenEntry" } } },
          { "name": "timestamp", "type": "i64" },
          { "name": "bump", "type": "u8" }
        ]
      }
    },
    {
      "name": "TokenPool",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "roundId", "type": "u64" },
          { "name": "entries", "type": { "vec": { "defined": "TokenPoolEntry" } } }
        ]
      }
    }
  ],
  "types": [
    {
      "name": "RoundStatus",
      "type": {
        "kind": "enum",
        "variants": [
          { "name": "Active" },
          { "name": "VrfRequested" },
          { "name": "Complete" }
        ]
      }
    },
    {
      "name": "TokenEntry",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "tokenMint", "type": "publicKey" },
          { "name": "ticker", "type": "string" },
          { "name": "lossAmountUsd", "type": "u64" },
          { "name": "holdings", "type": "u64" }
        ]
      }
    },
    {
      "name": "TokenPoolEntry",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "tokenMint", "type": "publicKey" },
          { "name": "ticker", "type": "string" },
          { "name": "submissionCount", "type": "u32" },
          { "name": "color", "type": "string" }
        ]
      }
    }
  ],
  "events": [
    {
      "name": "RoundStarted",
      "fields": [
        { "name": "roundId", "type": "u64", "index": false },
        { "name": "startTime", "type": "i64", "index": false },
        { "name": "endTime", "type": "i64", "index": false }
      ]
    },
    {
      "name": "UserParticipated",
      "fields": [
        { "name": "roundId", "type": "u64", "index": false },
        { "name": "user", "type": "publicKey", "index": false },
        { "name": "tokenCount", "type": "u8", "index": false }
      ]
    },
    {
      "name": "VrfRequested",
      "fields": [
        { "name": "roundId", "type": "u64", "index": false },
        { "name": "timestamp", "type": "i64", "index": false }
      ]
    },
    {
      "name": "RoundComplete",
      "fields": [
        { "name": "roundId", "type": "u64", "index": false },
        { "name": "winnerToken", "type": "publicKey", "index": false },
        { "name": "vrfResult", "type": { "array": ["u8", 32] }, "index": false }
      ]
    }
  ],
  "errors": [
    { "code": 6000, "name": "RoundNotActive", "msg": "Round is not active" },
    { "code": 6001, "name": "RoundEnded", "msg": "Round has already ended" },
    { "code": 6002, "name": "RoundNotEnded", "msg": "Round has not ended yet" },
    { "code": 6003, "name": "InvalidTokenCount", "msg": "Invalid token count (must be 1-3)" },
    { "code": 6004, "name": "PreviousRoundNotComplete", "msg": "Previous round not complete" },
    { "code": 6005, "name": "InvalidRoundStatus", "msg": "Invalid round status" },
    { "code": 6006, "name": "NoParticipants", "msg": "No participants in round" },
    { "code": 6007, "name": "VrfNotResolved", "msg": "VRF result not yet resolved" },
    { "code": 6008, "name": "AlreadyParticipated", "msg": "User already participated in this round" },
    { "code": 6009, "name": "InsufficientLoss", "msg": "Token does not meet minimum loss requirement" }
  ]
}
